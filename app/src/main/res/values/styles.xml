<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimationTop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_top</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="PopupAnimationBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="ConflictDisplay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="alphabetTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="PopupMenuOverlapAnchor" parent="@style/Theme.AppCompat.Light">
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>